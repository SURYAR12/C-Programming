//  Addmiddile concept using Data structure 

#include<stdio.h>
#include<stdlib.h>
typedef struct st
 {
     int roll;
     char name[10];
     float mark;
     struct st *next;
 }ST;
void addend(ST **ptr);
void print(ST *ptr);
int main()
{
     ST*hptr=0;
  char ch;
  do
  {
   addend(&hptr);
   printf("Do You want One More Data --> y \n");
   scanf(" %c",&ch);
  }while(ch=='y');
  
  print(hptr);

    
}
void addend(ST **ptr)
{
    ST *temp=malloc(sizeof(ST));
    printf("Enter Your Data\n");
    scanf("%d%s%f",&temp->roll,temp->name,&temp->mark);
    
    if((*ptr==0)||(temp->roll<(*ptr)->roll))
    {
     temp->next=0;    
     *ptr=temp;    
    }
    else
    {
    ST *last=*ptr;
    
    while((last->next!=0)&&(temp->roll > last->next->roll))
    last=last->next;
    
    temp->next=last->next;
    last->next=temp;
    }
}
void print(ST *ptr)
{
    while(ptr!=0)
    {
        printf("%d %s %f\n",ptr->roll,ptr->name,ptr->mark);
        ptr=ptr->next;
    }
    
}
